version: "3"
services:

  bililive-go:
	image: chigusa/bililive-go:latest
    container_name: bililive-go
    environment:
	  - PUID=0
	  - PGID=0
	  - TZ=Asia/Shanghai		
    volumes:
      - /opt/1panel/docker/compose/bililive-go:/srv/configs
      - /DATA/Media/live-videos:/srv/bililive
    ports:
      - 8999:8080
    restart: always